<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="users-raitings" author="Nikita">
        <createTable tableName="users_raitings">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="raiting_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseTableName="users_raitings"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_users_raitings_user"/>

        <addForeignKeyConstraint baseTableName="users_raitings"
                                 baseColumnNames="raiting_id"
                                 referencedTableName="raitings"
                                 referencedColumnNames="id"
                                 constraintName="fk_users_raitings_raitings"/>

        <addUniqueConstraint tableName="users_raitings"
                             columnNames="user_id, raiting_id"
                             constraintName="uc_users_raitings_userid_roleid"/>
    </changeSet>

</databaseChangeLog>